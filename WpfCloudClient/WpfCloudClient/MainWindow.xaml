<Window x:Class="WpfCloudClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini Cloud Drive"
        Height="600"
        Width="900"
        Background="#F7F9FC"
        WindowStartupLocation="CenterScreen"
        Closing="MainWindow_Closing">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,1,0">
            <StackPanel Margin="20">

                <TextBlock Text="☁ Mini Drive"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#444746"
                           Margin="0,0,0,25"/>

                <Button x:Name="btnUpload"
                        Click="btnUpload_Click"
                        Height="45"
                        Background="#1A73E8"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,25">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="⬆" FontSize="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Upload File"/>
                    </StackPanel>
                </Button>

                <StackPanel>
                    <TextBlock Text="Server Config"
                               FontWeight="Bold"
                               Foreground="Gray"
                               Margin="0,0,0,8"/>

                    <TextBox x:Name="txtIP"
                             Text="127.0.0.1"
                             Margin="0,0,0,5"
                             Padding="6"/>

                    <TextBox x:Name="txtPort"
                             Text="8888"
                             Margin="0,0,0,10"
                             Padding="6"/>

                    <Button x:Name="btnConnect"
                            Content="KẾT NỐI"
                            Click="btnConnect_Click"
                            Background="#1A73E8"
                            Foreground="White"
                            Padding="8"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        Margin="0,0,0,15">
                <TextBlock Text="File trên Cloud"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#1F1F1F"/>

                <Button Content="Refresh"
                        Click="btnRefresh_Click"
                        Margin="20,0,0,0"
                        Padding="6,3"
                        Background="#E0E0E0"
                        Foreground="#444"
                        FontWeight="Bold"
                        Cursor="Hand"/>
            </StackPanel>

            <ListView x:Name="lvFiles"
                      Grid.Row="1"
                      BorderThickness="0"
                      Background="Transparent"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Width="210"
                                Height="110"
                                Background="White"
                                CornerRadius="10"
                                Margin="6"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Padding="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="45"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <TextBlock Text="{Binding Icon}"
                                           FontSize="26"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>

                                <!-- Info -->
                                <StackPanel Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Margin="6,0">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis"/>

                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,4,0,0">
                                        <TextBlock Text="{Binding Size}"
                                                   FontSize="11"
                                                   Foreground="Gray"
                                                   Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding Status}"
                                                   FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="{Binding Color}"/>
                                    </StackPanel>

                                    <ProgressBar Height="6"
                                                 Margin="0,4,0,0"
                                                 Minimum="0"
                                                 Maximum="100"
                                                 Value="{Binding Progress}"/>
                                </StackPanel>

                                <!-- Actions -->
                                <StackPanel Grid.Column="2"
                                            VerticalAlignment="Center">

                                    <Button Content="⬇"
                                            Width="32"
                                            Height="24"
                                            Margin="0,0,0,4"
                                            Click="btnDownload_Click"/>

                                    <Button Content="✏"
                                            Width="32"
                                            Height="24"
                                            Margin="0,0,0,4"
                                            Click="btnRename_Click"/>

                                    <Button Content="Xóa"
                                            Width="42"
                                            Height="22"
                                            FontSize="10"
                                            Background="#FF4C4C"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="btnDelete_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Border Grid.Row="2"
                    Background="#1E1E1E"
                    CornerRadius="6"
                    Margin="0,15,0,0"
                    Padding="6">
                <ScrollViewer>
                    <TextBlock x:Name="txtLog"
                               Foreground="#00FF00"
                               FontFamily="Consolas"
                               FontSize="12"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
